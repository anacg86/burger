<h1>Burgers!</h1>

<img src="../public/assets/img/kisspng-hamburger-fast-food-veggie-burger-5a67ff851faa73.3982118115167650611297.jpg" class="rounded mx-auto d-block" alt="hamburger" width="200px">
<div class="container">
    <div class="row">
        <div class="col">

            <h2>Select the burgers you wish to devour!</h2>

            <ul>
                {{#each burgers}}
                {{burger_name  }}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true id=id burger_name=burger_name}}
                {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col">

            <h2>Devoured burgers</h2>

            <ul>
                {{#each burger}}
                {{#if devoured}}
                {{> burger/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>

        </div>
    </div>




    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="bur">Burger Name:</label>
            <input type="text" id="bur" name="burger_name">
        </div>

        <div class="form-group">
            <label for="devoured">Devoured?</label><br>
            <input type="radio" name="devoured" value="1" checked> Devoured!<br>
            <input type="radio" name="devoured" value="0"> Not devoured yet
        </div>

        <button type="submit">Add a Burger</button>
    </form>